{
    "manifest_version": 3,
    "name": "Chronicle",
    "version": "0.1.0",
    "description": "An intelligent browser assistant that groups tabs by content similarity",
    "permissions": [
        "tabs",
        "tabGroups",
        "storage",
        "system.memory",
        "scripting",
        "activeTab"
    ],
    "host_permissions": [
        "<all_urls>"
    ],
    "action": {
        "default_popup": "index.html",
        "default_title": "Chronicle"
    },
    "background": {
        "service_worker": "background.js",
        "type": "module"
    },
    "content_scripts": [
        {
            "matches": [
                "<all_urls>"
            ],
            "js": [
                "content.js"
            ],
            "run_at": "document_idle"
        }
    ]
}